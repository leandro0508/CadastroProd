@model CadastroProd.Models.Produto

@{
    ViewBag.Title = "Index";
 }

<h2>Cadastro de produtos não perecíveis</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Dados do produto</legend>
        <div class="editor-label">
            Código
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Codigo)
            @Html.ValidationMessageFor(model => model.Codigo)
        </div>

        <div class="editor-label">
           Nome do produto
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NomeProd)
            @Html.ValidationMessageFor(model => model.NomeProd)
           
        </div>
         <div class="editor-label">
           Descrição
         </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Descricao)
            @Html.ValidationMessageFor(model => model.Descricao)
        </div>
        <div class="editor-label">
            Peso
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Peso)
            @Html.ValidationMessageFor(model => model.Peso)
        </div>
        <div class="editor-label">
            Categoria
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Categoria)
            @Html.ValidationMessageFor(model => model.Categoria)
        </div>
        <div class=" editor-label">
            Valor unitário
        </div>
        <div class=" editor-field">
            @Html.EditorFor(model => model.ValorUnit)
            @Html.ValidationMessageFor(model => model.ValorUnit)
        </div>

        <p><input type="submit" value="Cadastrar" /></p>
    </fieldset>

    @section Scripts{
        @Scripts.Render("~/bundles/jqueryval");
    }
}

